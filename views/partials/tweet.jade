.column.is-half
  .tweet
    p #{tweet.fullText} 
      - each hashtag in tweet.hashTags
         a(href='https://twitter.com/hashtag/#{hashtag}?src=hash') ##{hashtag}

  footer.card-footer.tweet-footer
   if tweet.isSubbed 
    a(data-tweet-id='#{tweet.id}').tweet-action.tweet-leave.card-footer-item Leave
   else 
    a(data-tweet-id='#{tweet.id}').tweet-action.card-footer-item Join
