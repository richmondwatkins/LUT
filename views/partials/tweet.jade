.column.is-half
  .tweet
    p #{tweet.fullText} 
      - each hashtag in tweet.hashTags
         a(href='https://twitter.com/hashtag/#{hashtag}?src=hash')  ##{hashtag}
  footer.card-footer.tweet-footer
   if tweet.isSubbed 
    a(data-tweet-id='#{tweet.id}').tweet-action.tweet-leave.card-footer-item Leave
   else 
    a.join(data-tweet-id='#{tweet.id}').tweet-action.tweet-join.card-footer-item Join
   a.join(data-tweet-id='#{tweet.id}').tweet-now.card-footer-item Tweet Now
   .content.card-footer-item.is-small.has-text-centered
    p Sends at #{tweet.goesOutAt} EST

